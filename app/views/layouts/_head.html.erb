<%# Meta tags (user identification, hostname, etc.) %>
<% if Rails.env.development? %>
  <meta name="hostname" content="http://localhost:3000">
<% else %>
  <meta name="hostname" content="https://<%= request.host %>">
<% end %>
<% if user_signed_in? %>
  <meta name="user-login" content="<%= current_user.username %>">
<% end %>
